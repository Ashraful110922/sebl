<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btnCTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/et_margin10"
        android:layout_marginRight="@dimen/et_margin10"
        android:layout_marginBottom="@dimen/et_margin5"
        android:background="@drawable/toolbar_bg"
        android:gravity="center"
        android:padding="@dimen/et_margin10"
        android:text="@string/set_plan"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnCTarget"
        android:orientation="vertical"
        android:paddingLeft="@dimen/et_margin5"
        android:paddingRight="@dimen/et_margin5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginRight="@dimen/et_margin5"
            android:layout_marginTop="@dimen/et_margin10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ddPick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/date_icon"
                android:drawablePadding="@dimen/et_margin5"
                android:gravity="center_vertical"
                android:padding="@dimen/et_margin5"
                android:text="@string/set_date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:id="@+id/ttPicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="@dimen/et_margin5"
                android:gravity="center_vertical"
                android:padding="@dimen/et_margin5"
                android:text="@string/set_time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spCRoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/et_margin5"
                android:paddingRight="@dimen/et_margin5"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/et_margin10"
                android:contentDescription="@null"
                android:src="@drawable/down_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/spinner_border"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spMktChemist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/et_margin5"
                android:paddingRight="@dimen/et_margin5"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/et_margin10"
                android:contentDescription="@null"
                android:src="@drawable/down_icon" />
        </RelativeLayout>



        <TextView
            android:id="@+id/btnSelectChemist"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/et_margin5"
            android:background="@drawable/bg_b_border_select"
            android:drawableRight="@drawable/down_icon"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_margin14"
            android:paddingRight="@dimen/et_margin5"
            android:text="Select chemist"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size16" />
        <!-- <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:minHeight="?attr/actionBarSize"
             android:background="@drawable/spinner_border"
             android:layout_marginTop="@dimen/et_margin5"
             android:orientation="horizontal">

             <Spinner
                 android:id="@+id/spChemist"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:paddingLeft="@dimen/et_margin5"
                 android:paddingRight="@dimen/et_margin5"
                 android:layout_gravity="center"
                 android:background="@android:color/transparent"
                 android:gravity="center"
                 android:spinnerMode="dropdown" />
            <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_gravity="center"
                 android:layout_marginRight="@dimen/et_margin10"
                 android:contentDescription="@null"
                 android:src="@drawable/down_icon" />
         </RelativeLayout>-->


        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginTop="@dimen/et_margin10"
            android:layout_marginRight="@dimen/et_margin5"
            app:endIconMode="clear_text"
            app:endIconTint="@color/divider"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/opinion2Chemist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/write_comments"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="3"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text14" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvDTarget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/et_margin5"
            android:orientation="vertical" />
    </LinearLayout>


    <include
        android:id="@+id/dChemistNoFound"
        layout="@layout/notfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbTargetChemist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="invisible" />

</RelativeLayout>
