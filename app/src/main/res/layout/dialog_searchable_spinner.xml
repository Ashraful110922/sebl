<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/text_size16"
    android:background="@android:color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select item"
        android:textSize="@dimen/txt_size20"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search..."
        android:padding="@dimen/et_margin10"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="@dimen/et_margin5"
        android:layout_marginBottom="@dimen/et_margin5"
        android:background="@drawable/bg_b_border_select"/>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
