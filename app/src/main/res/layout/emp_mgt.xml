<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/setSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/et_margin5"
        android:background="@drawable/toolbar_bg"
        android:gravity="center"
        android:padding="@dimen/et_margin10"
        android:text="Set Schedule"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size14"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vhDaily"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/setSchedule"
        android:layout_below="@id/toolbar"
        android:background="@drawable/bg_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginRight="@dimen/et_margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/et_margin5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/datePick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:gravity="center_vertical"
                android:padding="@dimen/et_margin5"
                android:text="Set Date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginRight="@dimen/et_margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/areaCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Area Code : 444"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timePicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:gravity="center_vertical"
                android:padding="@dimen/et_margin5"
                android:text="Select time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <helper.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginRight="@dimen/et_margin5"
            android:autofillHints="Write reporting address"
            android:background="@color/et_bg"
            android:hint="Write reporting address"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/et_margin10"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size14" />

        <helper.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/et_margin5"
            android:layout_marginTop="@dimen/et_margin5"
            android:layout_marginRight="@dimen/et_margin5"
            android:autofillHints="Write purpose meeting"
            android:background="@color/et_bg"
            android:gravity="center_vertical"
            android:hint="Write purpose meeting"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:padding="@dimen/et_margin10"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/et_margin5"
            android:background="@drawable/un_select_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spEOrM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/et_margin5"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/et_margin10"
                android:contentDescription="@null"
                android:src="@drawable/down_icon" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvEmp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/et_margin5"
            android:orientation="vertical" />
    </LinearLayout>


    <include
        android:id="@+id/empNoFound"
        layout="@layout/notfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbEmpMgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="invisible" />
</RelativeLayout>