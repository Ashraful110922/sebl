<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/et_margin5"
        android:paddingLeft="@dimen/et_margin5"
        android:paddingRight="@dimen/et_margin5">

        <LinearLayout
            android:id="@+id/btnViewMio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/et_margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnEmpRpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/toolbar_bg"
                android:gravity="center"
                android:padding="@dimen/et_margin10"
                android:textAllCaps="true"
                android:text="@string/emp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/btnDoctorRpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/et_margin10"
                android:layout_weight="1"
                android:background="@drawable/toolbar_bg"
                android:gravity="center"
                android:padding="@dimen/et_margin10"
                android:textAllCaps="true"
                android:text="@string/dr"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/btnChenRpt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/et_margin10"
                android:layout_weight="1"
                android:background="@drawable/toolbar_bg"
                android:gravity="center"
                android:padding="@dimen/et_margin10"
                android:textAllCaps="true"
                android:text="@string/chemist"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search_for"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/rptSearch"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptDpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptZone"
            android:layout_marginTop="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/depot"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptDpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptDpo"
            android:layout_marginTop="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/region"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptRegion"
            android:layout_marginTop="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/area"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptTerritory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptArea"
            android:layout_marginTop="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/territory"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptTerritory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rptMio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptTerritory"
            android:layout_marginTop="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emp_"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/spinner_border"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spRptEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/et_margin5"
                    android:paddingRight="@dimen/et_margin5"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/et_margin10"
                    android:contentDescription="@null"
                    android:src="@drawable/down_icon" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dateEmpPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rptMio"
            android:layout_marginTop="@dimen/et_margin10"
            android:drawableLeft="@drawable/date_icon"
            android:drawablePadding="@dimen/et_margin5"
            android:gravity="center_vertical"
            android:padding="@dimen/et_margin5"
            android:text="Set Date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size16" />


    </RelativeLayout>


    <include
        android:id="@+id/empRptNoFound"
        layout="@layout/notfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pbEmpRpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="invisible" />

</RelativeLayout>
